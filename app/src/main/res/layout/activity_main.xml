<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:popupTheme="@style/Theme.AppCompat.NoActionBar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="500sp"
        android:id="@+id/imageView"
        android:src="@drawable/bb"
        android:contentDescription="Logo"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insurance_number"
        android:id="@+id/insurence_number"
        android:layout_margin="5dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/insurence_number"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textCursorDrawable="@color/colorPrimary"
                android:id="@+id/ensuranceEditText"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/buttonLogin"
        android:clickable="true"
        android:textSize="20sp"
        style="@style/Base.V22.Theme.AppCompat.Light"
        android:singleLine="false"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/login_form"
        android:layout_alignEnd="@+id/login_form"
        android:layout_alignParentStart="true"
        android:onClick="onClickLogin" />


</RelativeLayout>
